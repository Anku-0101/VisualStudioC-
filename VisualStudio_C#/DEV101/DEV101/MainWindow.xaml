<Window x:Class="DEV101.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DEV101"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
   
        <Canvas>
            <Label Content="First Name :" Canvas.Top="68" Canvas.Left="103" />
            <TextBox Text="{Binding Path=FirstName, Mode=TwoWay}" Width="250" Height="20" Canvas.Top="68" Canvas.Left="200" />

            <Label Content="Last Name :" Canvas.Top="108" Canvas.Left="103" />
            <TextBox Text="{Binding Path=LastName, Mode=TwoWay}" Width="250" Height="20" Canvas.Top="108" Canvas.Left="200" />

            <Label Content="Full Name" Canvas.Top="148" Canvas.Left="103" />
            <TextBox Text="{Binding Path=FullName, Mode=TwoWay}" Width="250" Height="20" Canvas.Top="148" Canvas.Left="200" />

        </Canvas>
   
</Window>
